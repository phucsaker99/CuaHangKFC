<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:background="#292826">

    <TextView
        android:id="@+id/txt_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txtTitle"
        android:layout_margin="10dp"
        android:textColor="#f9d342"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="sadas"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_food"
        android:layout_alignLeft="@id/txt_food"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="#f9d342"
        android:text="sadas"
        />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_description"
        style="@style/txtHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textColor="#f9d342"
        android:textStyle="bold"
        android:text="sadas"
        />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:backgroundTint="#f9d342"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:layout_toRightOf="@id/txt_food"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_alignTop="@id/txt_food"
        android:layout_marginTop="-5dp" />
</RelativeLayout>
</layout>
